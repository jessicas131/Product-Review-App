<%- include('../partials/header2') %>
  <div class="detail-container">
    <div style="display: inline-block; text-align: left">
    <div>
      <h3>Product Name:</h3>
      <span><%= product.productName %></span>
    </div>
    <div>
      <h3>Product Category:</h3>
      <span><%= product.productType %></span>
    </div>
    <div>
      <h3>Manufacturer's Description:</h3>
      <span><%= product.description %></span>
    </div>
    <div>
      <h3>Price:</h3>
      <span><%= product.price %></span>
    </div>
    </div>
  </div>  
  <br/>
  <!--Add Review Below-->
  <div class="review-container">
  <h3>Reviews:</h3>
  <form id="add-review" method="POST" action='/products/<%= product. _id %>/reviews'>
    <label>Review:</label>
    <br/>
    <textarea name= "content"></textarea>
    <br/>
    <label>Rating:</label>
    <br/>
    <span><strong>1</strong>= "I will never use this product again" - <strong>5</strong>= "Can't imagine life without it"</span>
    <br/>
    <br/>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="submit" value= "Add Review">
  </form>
  <br/>
  <!--Post Reviews Below-->
  <section class="written-reviews">
  <% if (review.length) { %>

      <% review.forEach(function(r) { %>
        <div class="reviewContainer">
        <div>
          <h6>Date:</h6> 
          <%= r.createdAt.toLocaleDateString() %>
        </div>
        <br/>
        <div>
          <h6>Review:</h6> 
          <%= r.content %>
        </div>
        <br/>
        <div><%= r.user.name %></div>
        <div>
          <h6>Rating:</h6> 
          <%= r.rating %>
        </div>
        <br/>
        </div>
        <div>
        <% if (r.user.equals(user._id)) { %>
          <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button>
          </form>
        <% } %>
      </div>
        <% }); %>
      
    <% } else { %>
      <h5>No Reviews Yet</h5>

  <% } %>
</section>
  
<%- include('../partials/footer') %>











