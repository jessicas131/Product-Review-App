<%- include('../partials/header') %>
  <div>
  <% if (user) { %>
    <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
  <% } else { %>
    <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
  <% } %>
</div>
  <h1>Hey</h1>
  <form method="GET" action="/products/new">
    <button type="submit">Add Product</button>
  </form>

  <div class="container">
    <% products.forEach(function(p) { %>
      <div>
        <a href="products/<%=p._id%>">
         <img src="<%= p.img %>">
      </div>
      <div>
        <%= p.productName %>
      </div>
      <div>
        <%= p.productType %>
      </div>
    </a>
    <form method="GET" action="products/<%= p._id %>">
      <button type="submit">Product Details</button>
    </form>
    <a class="editLink" href="products/<%= p._id %>/edit">Edit</a>
  </div>
  <% }); %>

  <%- include('../partials/footer') %>